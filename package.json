{
  "name": "menas.co",
  "productName": "menas.co - A Journaling App",
  "version": "0.0.1",
  "description": "A Simple Native/Mobile Journaling App",
  "license": "MIT",
  "repository": "iammenasco/menas.co",
  "author": {
    "name": "Brian Menasco",
    "email": "menasco@me.com",
    "url": "http://menas.co"
  },
  "engines": {
    "node": ">=4"
  },
  "electronVersion": "0.34.0",
  "scripts": {
    "test": "xo; babel-node ./node_modules/istanbul/lib/cli.js --include-all-sources cover ./node_modules/.bin/_mocha -- ./src/**/*.test.js -R spec --recursive",
    "update": "ncu --upgradeAll",
    "build": "export NODE_ENV='production'; electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --prune --asar --version=$npm_package_electronVersion",
    "build-sass": "node-sass --include-path src/styles --source-map index.map src/styles/index.scss index.css",
    "watch-sass": "nodemon -e scss -x \"npm run build-sass\"",
    "start": "export NODE_ENV='dev'; electron . & webpack --watch --progress --colors --output-source-map-file & npm run watch-sass",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect"
  },
  "files": [
    "index.js",
    "index.html",
    "index.css"
  ],
  "keywords": [
    "electron-app"
  ],
  "dependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.8",
    "browser-sync": "^2.18.2",
    "browser-sync-webpack-plugin": "^1.1.3",
    "css-loader": "^0.26.0",
    "electron": "^1.4.8",
    "electron-debug": "^1.1.0",
    "electron-packager": "^8.3.0",
    "expect.js": "^0.3.1",
    "istanbul": "^1.1.0-alpha.1",
    "keen-tracking": "^1.0.5",
    "mocha": "^3.1.2",
    "node-sass": "^3.13.0",
    "nodemon": "^1.11.0",
    "opbeat": "^3.21.1",
    "sass-loader": "^4.0.2",
    "snyk": "^1.20.0",
    "style-loader": "^0.13.1",
    "tap": "^8.0.1",
    "webpack": "^1.13.3",
    "xo": "^0.17.1"
  },
  "xo": {
    "ignores": [
      "build/*",
      "**/*.test.js"
    ],
    "esnext": true,
    "envs": [
      "node",
      "browser"
    ],
    "space": 2
  },
  "snyk": true
}
